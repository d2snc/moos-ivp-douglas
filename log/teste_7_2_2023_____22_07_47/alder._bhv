//--------    FILE: alder.bhv   -------------

initialize   DEPLOY = false
initialize   RETURN = false
initialize   AVOID   = true
initialize   AVOIDING = inactive

set MODE = ACTIVE {
  DEPLOY = true
} INACTIVE


Behavior=BHV_Waypoint
{
  name       = waypt_return
  pwt        = 100
  condition = RETURN = false
  condition = DEPLOY = true
  perpetual  = true
  updates    = RETURN_UPDATE
  endflag   = RETURN = true
  endflag   = AVOIDING = active
	
           speed = 2.0
  capture_radius = 2.0
     slip_radius = 8.0
          
          points = -2250,3100:-2350,3100
          
 }


//----------------------------------------------


Behavior = BHV_AvdColregsV19
{
  name       = avdcol_
  pwt        = 150
  condition  = AVOID = true
  condition  = MODE==ACTIVE
  updates    = CONTACT_INFO
  endflag    = CONTACT_RESOLVED = $[CONTACT]
  templating = spawn
  runflag   = AVOIDING = active

             contact = to-be-set
             bearing_lines = true
             match_type = SHIP
    on_no_contact_ok = true
         extrapolate = true
               decay = 30,60

    giveway_bow_dist = 10
        use_refinery = true

      pwt_outer_dist = 350
      pwt_inner_dist = 210
      completed_dist = 350
   min_util_cpa_dist = 350
   max_util_cpa_dist = 400
           pwt_grade = linear
 bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}

//----------------------------------------------
Behavior = BHV_AvoidCollision
{
  name         = ac_
  pwt          = 150
  condition    = AVOID = true 
  updates      = CONTACT_INFO_CPA
  templating   = spawn
  runflag   = AVOIDING = active

             contact = to-be-set
    on_no_contact_ok = true
         extrapolate = true
               decay = 30,60

        pwt_outer_dist = 250
        pwt_inner_dist = 100
        completed_dist = 400
     min_util_cpa_dist = 250
     max_util_cpa_dist = 400
             pwt_grade = linear
   bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}