//--------    FILE: alder.bhv   -------------

initialize   DEPLOY = false
initialize   RETURN = false
initialize   AVOID   = true
initialize   AVOIDING = inactive

set MODE = ACTIVE {
  DEPLOY = true
} INACTIVE

Behavior = BHV_Waypoint
{
  name      = waypt_survey
  pwt       = 100
  condition = RETURN = false
  condition = DEPLOY = true
  perpetual = true
  updates   = SURVEY_UPDATES
  endflag   = SURVEY = false

     endflag = SURVEY = false
          lead = 8
   lead_damper = 1
         speed = 2.0   // meters per second
        radius = 8.0
        points = format=lawnmower, label=dudley_survey, x=-2146, y=2674.2, width=200, height=300, lane_width=20, rows=north-south, degs=90
       // points = format=bowtie, label=dudley_bowtie, x=80, y=-80, wid1=10, wid2=25, wid3=30, height=20
        repeat = 10
  visual_hints = nextpt_color=red, nextpt_lcolor=khaki
  visual_hints = vertex_color=yellow, line_color=white
  visual_hints = vertex_size=2, edge_size=1
}


//----------------------------------------------


Behavior = BHV_AvdColregsV19
{
  name       = avdcol_
  pwt        = 150
  condition  = AVOID = true
  condition  = MODE==ACTIVE
  updates    = CONTACT_INFO
  endflag    = CONTACT_RESOLVED = $[CONTACT]
  templating = spawn
  runflag   = AVOIDING = active

             contact = to-be-set
             bearing_lines = true
             match_type = SHIP
    on_no_contact_ok = true
         extrapolate = true
               decay = 30,60

    giveway_bow_dist = 10
        use_refinery = true

      pwt_outer_dist = 350
      pwt_inner_dist = 210
      completed_dist = 350
   min_util_cpa_dist = 350
   max_util_cpa_dist = 400
           pwt_grade = linear
 bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}

//----------------------------------------------
Behavior = BHV_AvoidCollision
{
  name         = ac_
  pwt          = 150
  condition    = AVOID = true 
  updates      = CONTACT_INFO_CPA
  templating   = spawn
  runflag   = AVOIDING = active

             contact = to-be-set
    on_no_contact_ok = true
         extrapolate = true
               decay = 30,60

        pwt_outer_dist = 250
        pwt_inner_dist = 100
        completed_dist = 400
     min_util_cpa_dist = 250
     max_util_cpa_dist = 400
             pwt_grade = linear
   bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}